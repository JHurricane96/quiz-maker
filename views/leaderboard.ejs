<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Leaderboard</title>
		<link rel="stylesheet" href="/stylesheets/container.css" />
		<link rel="stylesheet" href="/stylesheets/header.css" />
		<link rel="stylesheet" href="/stylesheets/leaderboard.css" />
		<link rel="stylesheet" href="/stylesheets/form-extra.css" />
		<script>
			var lastRankScore = <%= users[users.length - 1].score %>;
			var curUsername = "<%= curUsername %>";
			var firstUsers = <%- JSON.stringify(users) %>;
			var done = <%= done %>;
		</script>
		<script src="/javascripts/leaderboard.js"></script>
	</head>
	<body>
		<%- include("header") %>
		<div class="container">
			<div class="container-header">
				<h1>The Leaderboard</h1>
			</div>
			<div class="container-body">
				<br /><br />
				<table>

				</table>
				<% var rankCount = 0, sameRankCount = 0, sameRankScore %>
				<table id="board">
					<tr>
						<th id="rank-head">Rank</th>
						<th>Username</th>
						<th id="score-head">Score</th>
					</tr>
					<tr id="your-rank-first">
						<td><%= curUserRank %></td>
						<td>You</td>
						<td><%= curUserScore %></td>
					</tr>
					<% for (var i = 0; i < users.length; ++i) { %>
					<tr>
						<% if (sameRankScore != users[i].score) { %>
							<% rankCount += sameRankCount + 1 %>
							<% sameRankScore = users[i].score %>
							<% sameRankCount = 0 %>
						<% } else { %>
							<% sameRankCount++ } %>
						<td><%= rankCount %></td>
						<td><%= users[i].username %></td>
						<td><%= users[i].score %></td>
					</tr>
					<% } %>
				</table>
			</div>
		</div>
	</body>
</html>	